{
  "name": "dry-lint",
  "description": "Detect duplicate or near-duplicate type definitions in TypeScript codebases.",
  "author": "Lodewijk Wensveen",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/config-conventional": "^19.8.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "pkg-size": "^2.4.0",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "cli",
    "duplicate",
    "types",
    "typescript"
  ],
  "license": "MIT",
  "packageManager": "bun@1.2.17",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "bunx changeset",
    "changeset:publish": "bunx changeset publish",
    "changeset:version": "bunx changeset version",
    "check-size": "pkg-size ./packages/cli",
    "check-size-limit": "size-limit",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "trustedDependencies": [
    "esbuild",
    "protobufjs"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
