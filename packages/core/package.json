{
  "name": "@dry-lint/core",
  "description": "Core lint logic and types for dry-lint plugins.",
  "version": "1.0.2",
  "author": "Lodewijk Wensveen",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "core",
    "lint",
    "plugin",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "dry-lint/dry-lint",
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
