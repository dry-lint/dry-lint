{
  "name": "@dry-lint/asyncapi",
  "description": "Detect duplicate or near-duplicate definitions in AsyncAPI documents.",
  "version": "1.0.2",
  "author": "Lodewijk Wensveen",
  "dependencies": {
    "@asyncapi/parser": "^3.4.0",
    "@dry-lint/core": "1.0.2",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "asyncapi",
    "lint",
    "parser",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dry-lint/dry-lint.git"
  },
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
