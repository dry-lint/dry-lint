{
  "name": "@dry-lint/terraform",
  "description": "Detect duplicate or near-duplicate definitions in Terraform HCL files.",
  "version": "2.0.0",
  "author": "Lodewijk Wensveen",
  "dependencies": {
    "@dry-lint/dry-lint": "2.0.0",
    "@evops/hcl-terraform-parser": "^1.0.0"
  },
  "devDependencies": {
    "@dry-lint/dry-lint": "2.0.0",
    "@types/node": "^24.0.12",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "hcl",
    "lint",
    "terraform",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "peerDependencies": {
    "@dry-lint/dry-lint": "2.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "dry-lint/dry-lint.git",
  "scripts": {
    "build": "tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "rimraf -g 'dist/*' dist tsconfig.tsbuildinfo",
    "lint": "eslint \"src/**/*.ts\"",
    "size": "pkg-size .",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
