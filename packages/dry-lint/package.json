{
  "name": "@dry-lint/dry-lint",
  "description": "Core singleton registry and shared utilities for Dry Lint plugins.",
  "version": "2.0.0",
  "dependencies": {
    "fast-levenshtein": "^3.0.0",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^24.0.11",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "default": "./dist/registry.js"
    },
    "./ts-project": {
      "types": "./dist/ts-project.d.ts",
      "default": "./dist/ts-project.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "peerDependencies": {
    "@dry-lint/dry-lint": "2.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist tsconfig.tsbuildinfo",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "size": "pkg-size .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
