{
  "name": "@dry-lint/openapi",
  "description": "Detect duplicate or near-duplicate definitions in OpenAPI and Swagger documents.",
  "version": "1.0.2",
  "author": "Lodewijk Wensveen",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@dry-lint/core": "1.0.2",
    "openapi3-ts": "^4.5.0",
    "swagger-schema-official": "^2.0.0-bab6bed"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/swagger-schema-official": "^2.0.25",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "lint",
    "openapi",
    "swagger",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dry-lint/dry-lint.git"
  },
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
