{
  "name": "@dry-lint/css",
  "description": "Detect duplicate or near-duplicate CSS, SCSS, and Less definitions using PostCSS.",
  "version": "1.0.2",
  "author": "Lodewijk Wensveen",
  "dependencies": {
    "@dry-lint/core": "1.0.2",
    "postcss": "^8.5.6",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/postcss-less": "^4.0.6",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "css",
    "less",
    "lint",
    "postcss",
    "scss",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "dry-lint/dry-lint",
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
