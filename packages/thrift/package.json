{
  "name": "@dry-lint/thrift",
  "description": "Detect duplicate or near-duplicate definitions in Apache Thrift IDL files.",
  "version": "1.0.1",
  "author": "Lodewijk Wensveen",
  "dependencies": {
    "@creditkarma/thrift-parser": "^2.0.0",
    "@dry-lint/core": "1.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "idl",
    "lint",
    "parser",
    "thrift",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "dry-lint/dry-lint",
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest",
    "test:ci": "vitest run"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
