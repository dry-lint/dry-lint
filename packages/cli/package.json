{
  "name": "@dry-lint/cli",
  "version": "1.1.1",
  "dependencies": {
    "@dry-lint/core": "1.0.2",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "globby": "^14.1.0",
    "ink": "^6.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "eslint": "^9.30.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "ink-testing-library": "^4.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "size": "pkg-size .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
