{
  "name": "@dry-lint/cli",
  "description": "Command line interface for dry-lint. Detect duplicate or near-duplicate type definitions.",
  "version": "1.1.3",
  "bin": {
    "dry": "./dist/index.js"
  },
  "dependencies": {
    "@dry-lint/dry-lint": "1.0.0",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "globby": "^14.1.0"
  },
  "devDependencies": {
    "@dry-lint/dry-lint": "1.0.0",
    "@testing-library/react": "^16.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.11",
    "@types/react": "^19.1.8",
    "eslint": "^9.30.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "ink-testing-library": "^4.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "peerDependencies": {
    "@dry-lint/dry-lint": "1.0.0",
    "ink": "^6.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^19.1.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run clean && bun run build:cli",
    "build:cli": "bun build src/index.tsx --outdir dist --target=node --format=esm --minify --packages external --external '@dry-lint/dry-lint' --external commander --external cosmiconfig --external globby --external ink --external react --external ink-spinner --external 'node:*'",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "size": "pkg-size .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
