{
  "name": "@dry-lint/typescript",
  "version": "1.0.1",
  "dependencies": {
    "@dry-lint/core": "1.0.1",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run clean && tsc -b",
    "check-types": "tsc -b --noEmit",
    "clean": "bunx rimraf dist/* dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
